# Clerk Authentication Configuration
# Get keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# Kong Admin API (for API key management)
# Kong runs on non-standard ports to avoid conflicts with abm.dev-platform
KONG_ADMIN_URL=http://localhost:8081
KONG_PROXY_URL=http://localhost:8080

# ABM.dev API Gateway (Kong Gateway)
# Routes API requests to abm.dev-platform backend
# Dev:  https://api-dev.abm.dev
# Prod: https://api.abm.dev
NEXT_PUBLIC_API_GATEWAY_URL=https://api-dev.abm.dev
